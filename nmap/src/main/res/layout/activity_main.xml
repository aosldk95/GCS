<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <fragment
        android:id="@+id/map"
        android:name="com.naver.maps.map.MapFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onBtnConnectTap"
        android:text="connect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <Button
        android:id="@+id/arm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:onClick="onArmButtonTap"
        android:text="arm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/clr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="clear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#80000000"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/volt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="전압:"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/voltview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0V"
                android:textColor="#ffffff" />

        </TableRow>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:text="비행모드:"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/modeSelect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:addStatesFromChildren="true"
            android:dropDownWidth="wrap_content"
            android:textColor="#ffffff"
            android:visibility="visible"
            tools:visibility="visible" />

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/altitudeLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="고도:"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/altitudeValueTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0m"
                android:textColor="#ffffff"
                android:textSize="14sp" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/speedLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="속도:"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/speedValueTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0m/s"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/yaw"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="yaw:"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/yawview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0deg"
                android:textColor="#ffffff" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/satellite"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="위성:"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/satelliteview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:textColor="#ffffff" />

        </TableRow>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout">

        <Button
            android:id="@+id/map3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="위성지도"
            android:visibility="invisible" />

        <Button
            android:id="@+id/map2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지형도"
            android:visibility="invisible" />

        <Button
            android:id="@+id/map1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일반지도"
            android:visibility="invisible" />

        <Button
            android:id="@+id/con2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일반지도" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/clr">

        <Button
            android:id="@+id/onff2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지적도 on"
            android:visibility="invisible" />

        <Button
            android:id="@+id/onff1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지적도 off" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout2">

        <Button
            android:id="@+id/lack2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="맵이동"
            android:visibility="invisible" />

        <Button
            android:id="@+id/lack1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="맵잠금"
            android:visibility="invisible" />

        <Button
            android:id="@+id/con1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="맵잠금" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>